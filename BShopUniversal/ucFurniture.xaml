<UserControl
    x:Class="BShopUniversal.ucFurniture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BShopUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400">

    <Grid Margin="0,0,0,0">
        <TextBlock x:Name="lblFurnitureWeight" HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" Text="Weight:" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblFurnitureNumParts" HorizontalAlignment="Left" Margin="10,54,0,0" TextWrapping="Wrap" Text="Num# of Parts:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFurnitureWeight" HorizontalAlignment="Left" Height="20" Margin="136,10,0,0" TextWrapping="Wrap" Text="txtFurnitureWeight" VerticalAlignment="Top" Width="131" IsReadOnly="True" BorderThickness="1"/>
        <TextBox x:Name="txtFurnitureNumParts" HorizontalAlignment="Left" Height="20" Margin="136,50,0,0" TextWrapping="Wrap" Text="txtFurnitureNumParts" VerticalAlignment="Top" Width="131" IsReadOnly="True" BorderThickness="1"/>

    </Grid>
</UserControl>
