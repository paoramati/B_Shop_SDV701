<UserControl
    x:Class="BShopUniversal.ucClothing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BShopUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400" 
    d:DesignHeight="100
    ">

    <Grid Margin="0,0,0,0">
        <TextBlock x:Name="lblClothingSize" HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" Text="Size:" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblGender" HorizontalAlignment="Left" Margin="10,54,0,0" TextWrapping="Wrap" Text="Gender:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtClothingSize" HorizontalAlignment="Left" Height="20" Margin="136,10,0,0" TextWrapping="Wrap" Text="txtClothingSize" VerticalAlignment="Top" Width="131" IsReadOnly="True" BorderThickness="1"/>
        <TextBox x:Name="txtClothingGender" HorizontalAlignment="Left" Height="20" Margin="136,50,0,0" TextWrapping="Wrap" Text="txtClothingGender" VerticalAlignment="Top" Width="131" IsReadOnly="True" BorderThickness="1"/>

    </Grid>
</UserControl>
